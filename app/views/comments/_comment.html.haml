.media
  .media-left
    = link_to user_path(comment.user.id) do
      = image_tag(comment.user.avatar.thumb, alt: "profile_photo", class: "media-object", style: "width: 64px; height: 64px;")
  .media-body
    %h4.media-heading#top-aligned-media
      = comment.user.name
      - if current_user_has?(comment)
        = link_to("削除", prototype_comment_path(comment.prototype_id, comment.id), method: :delete, id: "delete_comment")
        = link_to("編集", edit_prototype_comment_path(comment.prototype_id, comment.id))
    %P
      = comment.content
